# Test Environment Configuration
# Copy this file to .env.test and fill in your local test credentials

NODE_ENV=test
PORT=3501

# Local ClickHouse (already running)
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_USERNAME=default
CLICKHOUSE_PASSWORD=password
CLICKHOUSE_DATABASE=venon

# Local Supabase (already running)
SUPABASE_URL=http://localhost:54321
SUPABASE_ANON_KEY=your-local-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-local-service-role-key-here
SUPABASE_JWT_SECRET=your-local-jwt-secret-here

# Test User Credentials (for integration tests)
# Option 1: Use a pre-generated auth token
TEST_AUTH_TOKEN=your-test-auth-token-here

# Option 2: OR use email/password to sign in
# TEST_USER_EMAIL=test@venon.io
# TEST_USER_PASSWORD=test-password

# Test Account (use an existing account ID from local Supabase)
TEST_ACCOUNT_ID=your-test-account-id-here

# Optional: Test Shop Name
TEST_SHOP_NAME=your-test-shop-name-here

# Logging
LOG_LEVEL=error

# Rate Limiting (less strict for tests)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
